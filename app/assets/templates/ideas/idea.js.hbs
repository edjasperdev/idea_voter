

        <div class="list-group">
        
          <a class="list-group-item active">
                <div class="media col-md-3">
                    <figure class="pull-left">
                        <img class="media-object img-rounded img-responsive"  src="http://greatidea.jpg.to/" alt="{{idea.attributes.title}}" >
                    </figure>
                </div>

                <div class="col-md-6">
                    <h4 class="list-group-item-heading"> 
                    {{idea.attributes.title}} </h4>
                    <p class="list-group-item-text"> {{idea.attributes.description}} 
                     <strong><h5 class="list-group-item-heading"> 
                    -{{idea.attributes.name}} </h5></strong>
                    </p>
                </div>
                <div class="col-md-3 text-center">
                    <h2 id= "votes"> {{idea.attributes.votes}} <small> votes </small></h2>
                    <button id ="upvote" class="btn btn-default btn-lg btn-block"> Upvote! </button>
                </div>
          </a>

         
        </div>


