


<div class="container">
    <div class="row">
		<div class="well">
        <h1 class="text-center">Idea Voter</h1> <button type="button" class="btn btn-default btn-lg btn-block"> Contribute Your Idea! </button>
        <br>

        
        {{#each collection.models}}
        <div class="list-group">
        
          <a class="list-group-item active">
                <div class="media col-md-3">
                    <figure class="pull-left">
                        <img class="media-object img-rounded img-responsive"  src="http://placehold.it/350x250" alt="placehold.it/350x250" >
                    </figure>
                </div>
                <div class="col-md-6">
                    <h4 class="list-group-item-heading"> 
                    {{attributes.title}} </h4>
                    <p class="list-group-item-text"> {{attributes.description}} 
                    </p>
                </div>
                <div class="col-md-3 text-center">
                    <h2> {{attributes.votes}} <small> votes </small></h2>
                    <button type="button" class="btn btn-default btn-lg btn-block"> Upvote! </button>
                </div>
          </a>

         
        </div>

        {{/each}}

        </div>
         
	</div>
</div>
